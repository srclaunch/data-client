{
  "build": [
    {
      "buildDir": "dist",
      "buildFile": "index.js",
      "buildTypes": true,
      "bundle": true,
      "codeSplitting": true,
      "define": {},
      "excludeLibs": ["nanoid", "sequelize"],
      "format": "esm",
      "inputScripts": ["src/index.ts"],
      "minify": false,
      "platform": "node",
      "sourceMap": true,
      "target": "esnext",
      "treeShaking": true,
      "tsconfigPath": "tsconfig.json"
    },
    {
      "buildDir": "dist",
      "buildFile": "index.cjs.js",
      "bundle": true,
      "define": {},
      "excludeLibs": ["nanoid", "sequelize"],
      "format": "cjs",
      "inputScripts": ["src/index.ts"],
      "minify": true,
      "platform": "node",
      "sourceMap": true,
      "target": "es2015",
      "treeShaking": true
    }
  ]
}
